// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// ============================================================
// USER & SUBSCRIPTION MODELS
// ============================================================

model User {
  id            Int       @id @default(autoincrement())
  email         String    @unique
  name          String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // Relations
  projects      Project[]
  subscriptions Subscription[]
  instagramAccounts InstagramAccount[]
  socialAccounts SocialAccount[]
  monitoringConfigs MonitoringConfig[]
  
  @@map("users")
}

model Subscription {
  id            Int       @id @default(autoincrement())
  userId        Int
  plan          String    // STARTER, PROFESSIONAL, TEAM
  status        String    // active, canceled, expired
  startDate     DateTime  @default(now())
  endDate       DateTime?
  stripeCustomerId String?
  stripeSubscriptionId String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // Relations
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("subscriptions")
}

// ============================================================
// HEADSHOT STUDIO MODELS
// ============================================================

model Project {
  id            Int       @id @default(autoincrement())
  userId        Int
  name          String
  status        String    // uploading, analyzing, training, generating, completed, failed
  triggerWord   String    @default("TOK")
  trainingId    String?   // Replicate training ID
  modelVersion  String?   // Replicate model version
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // Relations
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  photos        Photo[]
  headshots     Headshot[]
  
  @@map("projects")
}

model Photo {
  id            Int       @id @default(autoincrement())
  projectId     Int
  url           String    @db.Text
  qualityScore  Float?
  feedback      Json?     // PhotoAnalysisResult
  approved      Boolean   @default(false)
  createdAt     DateTime  @default(now())
  
  // Relations
  project       Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  
  @@map("photos")
}

model Headshot {
  id            Int       @id @default(autoincrement())
  projectId     Int
  url           String    @db.Text
  thumbnailUrl  String?   @db.Text
  style         String
  background    String
  prompt        String    @db.Text
  aiScore       Float?
  isTopPick     Boolean   @default(false)
  metadata      Json?     // HeadshotMetadata
  createdAt     DateTime  @default(now())
  
  // Relations
  project       Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  socialPosts   SocialPost[] @relation("HeadshotToSocialPost")
  
  @@map("headshots")
}

// ============================================================
// SOCIAL MANAGER MODELS
// ============================================================

model SocialAccount {
  id            Int       @id @default(autoincrement())
  userId        Int
  platform      String    // twitter, facebook, linkedin, instagram
  username      String
  accessToken   String?   @db.Text
  refreshToken  String?   @db.Text
  tokenExpiry   DateTime?
  isActive      Boolean   @default(true)
  metadata      Json?     // Platform-specific data
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // Relations
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  posts         SocialPost[]
  
  @@unique([userId, platform, username])
  @@map("social_accounts")
}

model SocialPost {
  id            Int       @id @default(autoincrement())
  accountId     Int
  platform      String    // twitter, facebook, linkedin, instagram
  content       String    @db.Text
  mediaUrls     Json?     // Array of image/video URLs
  hashtags      String?   @db.Text
  status        String    // draft, scheduled, posted, failed
  scheduledFor  DateTime?
  postedAt      DateTime?
  postUrl       String?   @db.Text
  error         String?   @db.Text
  
  // Engagement metrics
  likes         Int       @default(0)
  comments      Int       @default(0)
  shares        Int       @default(0)
  views         Int       @default(0)
  
  // AI-generated content
  aiGenerated   Boolean   @default(false)
  aiPrompt      String?   @db.Text
  
  // Headshot integration
  headshotId    Int?
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // Relations
  account       SocialAccount @relation(fields: [accountId], references: [id], onDelete: Cascade)
  headshot      Headshot? @relation("HeadshotToSocialPost", fields: [headshotId], references: [id])
  sentimentAnalysis SentimentAnalysis?
  
  @@map("social_posts")
}

// Instagram Account model (legacy - for backward compatibility)
model InstagramAccount {
  id            Int       @id @default(autoincrement())
  userId        Int
  username      String    @unique
  password      String
  sessionData   Json?
  isActive      Boolean   @default(true)
  lastPostAt    DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // Relations
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  posts         InstagramPost[]
  
  @@map("instagram_accounts")
}

// Instagram Post model (legacy - for backward compatibility)
model InstagramPost {
  id            Int       @id @default(autoincrement())
  accountId     Int
  caption       String    @db.Text
  imageUrl      String?   @db.Text
  hashtags      String?   @db.Text
  status        String    // scheduled, posted, failed
  scheduledFor  DateTime?
  postedAt      DateTime?
  error         String?   @db.Text
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // Relations
  account       InstagramAccount @relation(fields: [accountId], references: [id], onDelete: Cascade)
  
  @@map("instagram_posts")
}

// ============================================================
// SENTIMENT AGENT MODELS
// ============================================================

model MonitoringConfig {
  id            Int       @id @default(autoincrement())
  userId        Int
  name          String
  keywords      Json      // Array of keywords to monitor
  brands        Json      // Array of brand names
  hashtags      Json      // Array of hashtags
  platforms     Json      // Array of platforms to monitor
  isActive      Boolean   @default(true)
  alertThreshold Float    @default(-0.5) // Alert when sentiment drops below this
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // Relations
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  mentions      SocialMention[]
  
  @@map("monitoring_configs")
}

model SocialMention {
  id            Int       @id @default(autoincrement())
  configId      Int
  platform      String    // twitter, facebook, linkedin, instagram, reddit
  externalId    String    // Platform-specific ID
  text          String    @db.Text
  authorUsername String
  authorDisplayName String
  authorProfileUrl String @db.Text
  authorFollowers Int?
  url           String    @db.Text
  timestamp     DateTime
  
  // Engagement metrics
  likes         Int       @default(0)
  comments      Int       @default(0)
  shares        Int       @default(0)
  views         Int?
  
  isReply       Boolean   @default(false)
  parentId      String?
  
  // Sentiment analysis
  sentimentScore Float?
  sentimentLabel String?  // positive, negative, neutral, mixed
  urgency       String?   // low, medium, high, critical
  actionable    Boolean   @default(false)
  
  // Response tracking
  responded     Boolean   @default(false)
  responseText  String?   @db.Text
  respondedAt   DateTime?
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // Relations
  config        MonitoringConfig @relation(fields: [configId], references: [id], onDelete: Cascade)
  analysis      SentimentAnalysis?
  
  @@unique([platform, externalId])
  @@index([configId, timestamp])
  @@map("social_mentions")
}

model SentimentAnalysis {
  id            Int       @id @default(autoincrement())
  mentionId     Int?      @unique
  postId        Int?      @unique
  
  // Sentiment metrics
  score         Float     // -1 to 1
  sentiment     String    // positive, negative, neutral, mixed
  confidence    Float     // 0 to 1
  
  // Emotions
  emotions      Json?     // { joy, anger, sadness, fear, surprise, disgust }
  
  // Topics and keywords
  keywords      Json?     // Array of keywords
  topics        Json?     // Array of topics
  
  // Urgency and action
  urgency       String    // low, medium, high, critical
  actionable    Boolean   @default(false)
  suggestedResponse String? @db.Text
  
  // Analysis metadata
  analyzedAt    DateTime  @default(now())
  model         String    @default("claude-sonnet-4")
  
  // Relations
  mention       SocialMention? @relation(fields: [mentionId], references: [id], onDelete: Cascade)
  post          SocialPost? @relation(fields: [postId], references: [id], onDelete: Cascade)
  
  @@map("sentiment_analyses")
}

model SentimentAlert {
  id            Int       @id @default(autoincrement())
  userId        Int
  type          String    // negative_spike, positive_trend, urgent_mention
  severity      String    // low, medium, high
  message       String    @db.Text
  data          Json?     // Additional alert data
  isRead        Boolean   @default(false)
  createdAt     DateTime  @default(now())
  
  @@index([userId, isRead])
  @@map("sentiment_alerts")
}
